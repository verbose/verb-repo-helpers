{
  "name": "verb-repo-helpers",
  "description": "Commonly used helpers for adding repository-related data to templates in verb projects.",
  "version": "0.2.2",
  "homepage": "https://github.com/verbose/verb-repo-helpers",
  "author": "Jon Schlinkert (https://github.com/jonschlinkert)",
  "repository": "verbose/verb-repo-helpers",
  "bugs": {
    "url": "https://github.com/verbose/verb-repo-helpers/issues"
  },
  "license": "MIT",
  "files": [
    "index.js",
    "utils.js"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "test": "mocha"
  },
  "dependencies": {
    "debug": "^2.2.0",
    "fs-exists-sync": "^0.1.0",
    "get-pkg": "^0.3.0",
    "get-value": "^2.0.5",
    "github-contributors": "^0.2.1",
    "helper-apidocs": "^0.5.1",
    "helper-copyright": "^2.1.1",
    "helper-date": "^0.2.2",
    "helper-issue": "^0.3.0",
    "helper-reflinks": "^3.2.0",
    "helper-related": "^0.15.0",
    "is-valid-app": "^0.1.1",
    "lazy-cache": "^2.0.1",
    "mixin-deep": "^1.1.3"
  },
  "devDependencies": {
    "engine-base": "^0.1.2",
    "gulp": "^3.9.1",
    "gulp-eslint": "^2.0.0",
    "gulp-format-md": "^0.1.9",
    "gulp-istanbul": "^0.10.4",
    "gulp-mocha": "^2.2.0",
    "gulp-unused": "^0.1.2",
    "mocha": "^2.5.3",
    "templates": "^0.21.0"
  },
  "keywords": [
    "apidocs",
    "contributors",
    "copyright",
    "github",
    "github-contributors",
    "helper",
    "helper-apidocs",
    "helper-copyright",
    "helper-issue",
    "helper-related",
    "helpers",
    "issue",
    "plugin",
    "reflinks",
    "related",
    "repo",
    "verb",
    "verbhelper",
    "verbplugin"
  ],
  "verb": {
    "run": true,
    "toc": false,
    "layout": "default",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "related": {
      "list": [
        "verb",
        "verb-defaults",
        "verb-readme-generator",
        "verb-repo-data"
      ]
    },
    "reflinks": [
      "verb",
      "verb-readme-generator"
    ],
    "lint": {
      "reflinks": true
    }
  }
}
